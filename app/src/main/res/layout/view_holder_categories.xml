<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="onClickMedicine"
            type="android.view.View.OnClickListener" />
        <variable
            name="onClickHealth"
            type="android.view.View.OnClickListener" />
        <variable
            name="onClickBeautyCare"
            type="android.view.View.OnClickListener" />
        <variable
            name="onClickAccessories"
            type="android.view.View.OnClickListener" />
        <variable
            name="onClickPersonalCare"
            type="android.view.View.OnClickListener" />
        <variable
            name="url"
            type="com.amrabdelhamiddiab.core.domain.NameOfImages" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/btn_image_home_health"
            imageUrl="@{url.health}"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@color/white"
            android:onClick="@{onClickHealth}"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/btn_image_home_beauty_care"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp"
            tools:ignore="SpeakableTextPresentCheck" />
        <!--  imageUrl="@{listOfImagesOfCategories.listOfImages3[0].imageUrl}"-->
        <ImageButton
            android:id="@+id/btn_image_home_beauty_care"
            imageUrl="@{url.beauty_care}"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@color/white"
            android:onClick="@{onClickBeautyCare}"
            android:contentDescription="@string/beauty_care"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="5"
            app:layout_constraintStart_toEndOf="@+id/btn_image_home_health"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btn_image_home_accessories"
            imageUrl="@{url.accessories}"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:onClick="@{onClickAccessories}"
            app:layout_constraintEnd_toStartOf="@+id/btn_image_home_personal_care"
            app:layout_constraintHorizontal_weight="13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:strokeWidth="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btn_image_home_personal_care"
            imageUrl="@{url.personal_care}"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginTop="70dp"
            android:onClick="@{onClickPersonalCare}"
            android:background="@color/white"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="7"
            app:layout_constraintStart_toEndOf="@+id/btn_image_home_accessories"
            app:layout_constraintTop_toTopOf="@+id/btn_image_home_accessories"
            app:strokeWidth="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/btn_image_home_medicines"
            imageUrl="@{url.medicine}"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:padding="0dp"
            android:onClick="@{onClickMedicine}"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:strokeWidth="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/medicines"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_image_home_medicines" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/health"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toEndOf="@+id/btn_image_home_health"
            app:layout_constraintStart_toStartOf="@+id/btn_image_home_health"
            app:layout_constraintTop_toBottomOf="@+id/btn_image_home_health" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/beauty_care"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toEndOf="@+id/btn_image_home_beauty_care"
            app:layout_constraintStart_toStartOf="@+id/btn_image_home_beauty_care"
            app:layout_constraintTop_toBottomOf="@+id/btn_image_home_beauty_care" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/accessories"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toEndOf="@+id/btn_image_home_accessories"
            app:layout_constraintStart_toStartOf="@+id/btn_image_home_accessories"
            app:layout_constraintTop_toBottomOf="@+id/btn_image_home_accessories" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:lines="2"
            android:text="@string/personal_care"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/blue"
            app:layout_constraintEnd_toEndOf="@+id/btn_image_home_personal_care"
            app:layout_constraintStart_toStartOf="@+id/btn_image_home_personal_care"
            app:layout_constraintTop_toBottomOf="@+id/btn_image_home_personal_care" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>